<% include ../partials/header%>


    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a New Campground</h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/campground" method="Post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Campground Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" btn>Submit!</button>
                    </div>
                </form>
                <a href="/campground">Back to Campgrounds</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer%>